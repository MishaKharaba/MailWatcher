<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <ToggleButton
            android:id="@+id/alert_item_toggle"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/btn_toggle_bg"
            android:checked="true"
            android:textOff="OFF"
            android:textOn="ON"/>

        <TextView
            android:id="@+id/alert_item_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/alert_item_toggle"
            android:layout_toStartOf="@id/alert_item_toggle"
            android:hint="@string/alert_name"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:id="@+id/alarm_label_tone_selection"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/alert_item_name"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@id/alert_item_toggle"
            android:layout_toStartOf="@id/alert_item_toggle"
            android:text="@string/select_alarm_tone"
            android:textSize="14sp"/>

    </RelativeLayout>

</FrameLayout>
